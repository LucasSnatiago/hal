# Linker Options
ifeq ($(CLUSTER_VARIANT),node)
	export LDFLAGS  += -L $(LINKERDIR)/k1bdp/ -T link.ld
else
	export LDFLAGS  += -L $(LINKERDIR)/k1bio/ -T link.ld
endif

C_SRC += $(wildcard processor/*.c)

ASM_SRC = $(wildcard core/arch/k1b.S)

# Object Files
OBJ = $(ASM_SRC:.S=.$(CLUSTER)-$(CLUSTER_VARIANT).o) \
	  $(C_SRC:.c=.$(CLUSTER)-$(CLUSTER_VARIANT).o)

# Builds object files for MPPA-256 target.
mppa256: $(OBJ)
ifeq ($(VERBOSE), no)
	@echo [LD] $(OBJ)
	@$(CC) $(CFLAGS) $(LDFLAGS) $(OBJ) -o $(BINDIR)/$(EXECBIN) -Wl,--whole-archive $(LIBS_OURS) -Wl,--no-whole-archive $(LIBS_THEIRS)
else
	$(CC) $(CFLAGS) $(LDFLAGS) $(OBJ) -o $(BINDIR)/$(EXECBIN) -Wl,--whole-archive $(LIBS_OURS) -Wl,--no-whole-archive $(LIBS_THEIRS)
endif

# Cleans all object files.
clean:
ifeq ($(VERBOSE), no)
	@echo [CLEAN] $(BINDIR)/$(EXECBIN) $(OBJ)
	@rm -rf $(BINDIR)/$(EXECBIN) $(OBJ)
else
	rm -rf $(BINDIR)/$(EXECBIN) $(OBJ)
endif

# Builds a C Source file
%.$(CLUSTER)-$(CLUSTER_VARIANT).o: %.c
ifeq ($(VERBOSE), no)
	@echo [AS] $@
	@$(CC) $(CFLAGS) $< -c -o $@
else
	$(CC) $(CFLAGS) $< -c -o $@
endif

# Builds an ASM Source File
%.$(CLUSTER)-$(CLUSTER_VARIANT).o: %.S
ifeq ($(VERBOSE), no)
	@echo [CC] $@
	@$(CC) $(CFLAGS) $< -c -o $@
else
	$(CC) $(CFLAGS) $< -c -o $@
endif
